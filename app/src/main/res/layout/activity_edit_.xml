    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/ed_Name"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mssv"
        android:id="@+id/ed_Mssv"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
